<div class="tab-pane fade show active" id="show-feature" role="tabpanel" aria-labelledby="nav-home-tab">
    <!-- DataTales Example -->
    <div class="card shadow my-3">
        <div class="card-body">
            <div class="row">
                <div class="col-md-7">
                    <!-- DataTales Example -->
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>No</th>
                                    <th>Name</th>
                                    <th>Qty</th>
                                    <th>Image Url</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% for( let i = 0; i < feature.length; i++ ) { %>
                                <tr>
                                    <td><%= i + 1 %></td>
                                    <td><%= feature[i].name %></td>
                                    <td><%= feature[i].qty %></td>
                                    <td><img src="/<%= feature[i].imageUrl %>"
                                            alt="<%= feature[i].namefeature %> proof payment" width="75">
                                    </td>
                                    <td>
                                        <form
                                            action="/admin/item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE"
                                            method="post">
                                            <a type="button" class="btn btn-warning btn-circle btn-sm button-update"
                                                href="javascript:void()" data-id="<%= feature[i].id %>"
                                                data-name="<%= feature[i].name %>" data-qty="<%= feature[i].qty %>">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="submit" class="btn btn-danger btn-circle btn-sm">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </form>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>

                        </table>
                    </div>
                    <!--End DataTables -->
                </div>
                <div class="col-md-5">
                    <form action="/admin/item/add/feature" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" name="name" placeholder="Enter Name"
                                autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <label>QTY</label>
                            <input type="number" class="form-control" name="qty" placeholder="Enter qty"
                                autocomplete="off" required>
                        </div>
                        <div class="form-group">
                            <span class="my-0">Select Image</span>
                            <input type="file" class="form-control-file my-2" name="image">
                        </div>
                        <input type="hidden" value="<%= itemId %>" name="itemId">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </form>

                </div>

            </div>
        </div>
    </div>
    <!--End DataTables -->

</div>