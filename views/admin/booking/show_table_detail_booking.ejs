<div class="card shadow my-3">
    <div class="card-body">
        <div class="row">
            <div class="col-md-8">
                <!-- DataTales Example -->
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTableActivity" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>Name Member</th>
                                <th>Total</th>
                                <th>Bank From</th>
                                <th>Title</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                                <td>$<%= booking.total %></td>
                                <td><%= booking.payments.bankFrom %></td>
                                <td><%= booking.itemId.title %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!--End DataTables -->
            </div>
            <div class="col-md-4">
                <img src="/<%= booking.payments.proofPayment %>" alt="Proof Payment" width="100%">
                <% if (booking.payments.status == "Proses") { %>
                <div class="row justify-content-center bg-gray-400 p-2 mt-2">
                    <form action="/admin/booking/<%= booking._id %>?_method=PUT" method="post" class="mx-2">
                        <button type="submit" class="btn btn-success btn-sm" name="status" value="Confirmed">
                            <i class="fas fa-check"></i> Confirm
                        </button>
                    </form>
                    <form action="/admin/booking/<%= booking._id %>?_method=PUT" method="post" class="mx-2">
                        <button type="submit" class="btn btn-danger btn-sm" name="status" value="Rejected">
                            <i class="fas fa-times"></i> Reject
                        </button>
                    </form>
                </div>

                <% } %>
            </div>

        </div>
    </div>
</div>